<p id="notice"><%= notice %></p>

<h1>Claims</h1>

<table>
  <thead>
    <tr>
      <th>Claim number</th>
      <th>Initiation date</th>
      <th>Amount</th>
      <th>Approved amount</th>
      <th>Claim reason</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @claims.each do |claim| %>
      <tr>
        <td><%= claim.claim_number %></td>
        <td><%= claim.initiation_date %></td>
        <td><%= claim.amount %></td>
        <td><%= claim.approved_amount %></td>
        <td><%= claim.claim_reason %></td>
        <td><%= link_to 'Show', claim %></td>
        <td><%= link_to 'Edit', edit_claim_path(claim) %></td>
        <td><%= link_to 'Destroy', claim, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

